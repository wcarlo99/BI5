<UserControl x:Class="BI5.UCs.UCcarta"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BI5.UCs" Margin="1"
             mc:Ignorable="d" Width="80" Height="120" BorderBrush="Black" BorderThickness="2">

    <Button Background="White" Click="Button_Click">

        <Grid>

            <Image x:Name="IMG" Stretch="UniformToFill" Source="/BI5;component/CARDS/10ori.png"  />

            <Grid Background="Transparent" Visibility="Collapsed">

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />            
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Path=seme}" />
        <Label Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Path=numerico}" FontWeight="Bold" />
        <Label Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Path=valore}" />

   

        

    </Grid>

        </Grid>

    </Button>

</UserControl>
